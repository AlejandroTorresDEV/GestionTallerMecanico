<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#E2E2E2">


    <ImageView
        android:id="@+id/imagenTaller"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_menu_slideshow"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtNombreTaller"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Taller el brevas"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_above="@+id/txtMatriculaCoche"
        android:layout_toRightOf="@+id/imagenTaller"
        android:layout_toEndOf="@+id/imagenTaller" />

    <TextView
        android:id="@+id/txtMatriculaCoche"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="78945612F"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtNombreTaller"
        android:layout_alignStart="@+id/txtNombreTaller" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="20/11/1992"
        android:layout_alignBaseline="@+id/txtNombreTaller"
        android:layout_alignBottom="@+id/txtNombreTaller"
        android:layout_alignLeft="@+id/txtHora"
        android:layout_alignStart="@+id/txtHora" />

    <TextView
        android:id="@+id/txtHora"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="20:22"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_below="@+id/txtFecha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>